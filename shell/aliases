# ALIASES
# -------

# Directory listings
alias ls="ls -G"
alias ll="ls -lh"
alias la="ls -lah"
alias lt="ls -laht"
alias lh="ls -lad .*"

# Directory history
alias dh='dirs -v'

# Bash shell
alias bash="bash --rcfile <(echo 'unset HISTFILE')"

# DOS commands
alias cls="clear"
alias dir="ls"

# Homebrew
alias bw="brew"
alias bwu="brew upgrade"
alias bwo="brew outdated"
alias blf="brew list --formula"
alias blc="brew list --cask"
alias blp="brew list --pinned"
alias bdi="brew deps --installed"
alias bdb="brew deps --installed --include-build"
alias bui="brew uses --installed"
alias bud="brew uses --installed --include-build"
alias bwc="brew cleanup --prune=all"

# Git
alias gt="git"
alias gts="git status -s"
alias gtk="gitk --all&"

# Mise
alias ma='eval "$(mise activate zsh)"'

# Python
alias python="python3"
alias py="python3"
alias pip="pip3"
alias pydata="source $HOME/.local/pyvenvs/pydata/bin/activate"
alias cda='eval "$(conda shell.zsh hook)"; conda activate'
alias mba='eval "$(mamba shell hook --shell zsh)"; mamba activate'

# IPython & Jupyter
alias ipy="ipython3"
alias jpl="jupyter-lab"

# Node
alias ng="npm list -g --depth=0"
alias nl="npm list --depth=0"

# R
alias r="r --no-save"

# Web servers
alias nws="http-server -o"
alias pws="python3 -m http.server &; sleep 0.1; \
  open -g http://localhost:8000; fg"

# Local scripts
alias mup=mac-update
alias bbs=bb-push
alias gfs="gb sync"
alias rup="gb pull; echo; gb push; echo; \
  gb-wt pull; echo; gb-wt push; echo; \
  bb-push; echo; \
  gb sync -q"
